    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "--model_name",
                "LSR_bert",
                "--batch_size",
                "10",
                "--lr",
                "0.0001"
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "make_statistic",
            "type": "python",
            "request": "launch",
            "module": "src.data.make_statistics"
        }
    ]
}